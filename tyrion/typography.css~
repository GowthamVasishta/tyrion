body {
font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
font-size: 100%;
color: #333;
}

h1,h2,h3,h4,h5,h6 {
font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
font-weight: 400;
color: #161e21;
}

/**
 * 1. set line height as golden ration (1.618 aaprox)
 * 2. set font size as 2*golden ratio
 * 3. set margin bottom as one third of golden ratio (0.54 approx)
 */

h1 {
 line-height: 1.618;
 font-size: 3.2em;
 margin-bottom: 0.54em;
}

/**
 * set values from h2 - h6 w.r.t h1
 */


h2 {
line-height: 1.3;
font-size: 2.2em;
margin-bottom: 0.6em;
}

h3 {
line-height: 1.1;
font-size: 1.7em;
margin-bottom: 1em;
}

h4 {
line-height: 0.9;
font-size: 1.4em;
margin-bottom: 1.3em;
}

h5 {
line-height: 0.6;
font-size: 1em;
font-weight: bold;
margin-bottom: 1.7em;
}

h6 {
line-height: 0.4;
font-size: 0.8em;
font-weight: bold;
margin-bottom: 0.6em;
}

/**
 * ****** text fromatting *****
 */

p {
font-size: 100%;
line-height: 1.6;
margin: 0 0 1.5em;
} 

a:active,
a:hover {
outline: 0;
color: #09f;
}
a { color: #06c; text-decoration: none; }
a:focus {
outline: thin dotted;
}

strong, b, dfn {
font-weight:bold;
}

em,dfn,i {
font-style: italic;
}

dfn{
font-style: italic;
}

hr {
height: 0;
-moz-box-sizing: centent-box;
box-sizing: content-box;
}

code,kbd,pre,samp {
font-family: monospace, serif;
font-size: 1em;
}

sub, sup {
line-height: 0;
}

pre {
white-space: pre-wrap;
}
 
pre, code, tt {
font: 1em 'andale mono', 'lucida console', monospace;
line-height:1.6em;
font-size: 100%;
}

abbr, acronym {
border-bottom: 1px dotted #777;
}

address {
font-style: italic;
margin: 0 0 1.6em;
}


/**
 * HANDY CLASSES
 */

.left { 
float:left; !important
}
.right {
float: right; !important
} 

p .left {
margin: 1.6em 1.6em 1.6em 0;
padding: 0;
}

p .right {
margin: 1.6em 0 1.6em 1.6em 1.6em;
padding: 0;
}







